// Becoming hostile
IF
	!Allegiance(Myself,ENEMY)
	OR(3)
		AttackedBy([ANYONE],DEFAULT)
		AttackedBy([ANYONE],MELEE)
		AttackedBy([ANYONE],RANGED)
THEN
	RESPONSE #100
		Enemy()
		Continue()
END

//Script trigger
IF
	!Allegiance(Myself,ENEMY)
 	Global("ys_TalkedToDwarfLord","GLOBAL",2)
THEN
  RESPONSE #100
    Enemy()
END

//Target acquisition
IF
	Allegiance(Myself,ENEMY)
	See(Myself)
	False()
THEN
	RESPONSE #100
		Continue()
END

//Check for the nearest target
IF
	Allegiance(Myself,ENEMY)
	!InParty(SixthNearestEnemyOf())
	!StateCheck(SixthNearestEnemyOf(),STATE_NOT_VISIBLE)
	!StateCheck(SixthNearestEnemyOf(),STATE_HARMLESS)
	See(SixthNearestEnemyOf())
	False()
THEN
	RESPONSE #100
		Continue()
END

